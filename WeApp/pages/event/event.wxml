<view class="page">
    <view class="page__hd">
        <view class="page__title">于{{event.time}}到达{{event.location}}</view>
        <view class="page__desc">{{event.description}}</view>
        
    </view>
    <view class="page__bd">
        <view class="map-area">
            <map class="map" latitude="{{latitude}}" longitude="{{longitude}}" show-location="true"/>
        </view>
        <view wx:if="{{event.status==0}}">
            <view class="weui-btn-area">
                <button catchtap="clockin" class="weui-btn" type="primary">准点到啦！</button>
                <button catchtap="fail" class="weui-btn" type="warn">失败...</button>
            </view>
        </view>
        <view wx:elif="{{event.status==1}}">
            准点到了
        </view>
        <view wx:else="{{event.status==2}}">
            失败...
        </view>
    </view>
</view>